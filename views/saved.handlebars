<div class="jumbotron jumbotron-fluid text-center d-flex justify-content-end">
  <div class="row mb-0">
    <div class="col-md-12">
      <p class="lead blue lighten-5">The latest news from Granma International</p>
    </div>
  </div> 
</div>

<div class="container">
  <h3>Saved articles</h3>
  {{#each articles}}
    <div class="card bg-light mb-3">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <a href="{{link}}" class="card-link" target="_blank">View article on Granma International</a>
        <p class="card-text">{{intro}}...</p>
        <a data-articleId= {{_id}} class="btn btn-primary unsave-btn">Remove from saved</a>
        <a data-articleId= {{_id}} class="btn btn-primary comment-modal-btn" data-toggle="modal">Add comment</a>
      </div>
    </div>
  {{/each}}
</div>



<div id="add-comment-modal" class="modal" tabindex="-1" role="dialog" data-articleId="">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="comment-modal-title" class="modal-title"></h5>
      </div>
      <div class="modal-body container">
        <ul class="comments-list">
        </ul>
        <div class="form-group">
          <label for="comment-area">New comment</label>
          <textarea name="new-comment-area" class="form-control" id="comment-body" rows="2" required></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary comment-save-btn" data-dismiss="modal">Save</button>

        </div>
      </div>
    </div>
  </div>